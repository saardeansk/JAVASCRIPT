const readline = require('readline');

const rl = readline.createInterface({
  input: process.stdin,
  output: process.stdout // Fixed spelling (added 't')
});
rl.question("Enter the value of n: ", (n) => {
rl.question("enter the table you want to print :",(a) => {
  function tables()
  {
    console.log("the",a,"table :")
   for (var i = 1; i < n ;i +=1)
   {
     console.log(a ,"*",i,"=",a * i )
   }
  }
  function loop()
  {
   let i = 0
   while(i<5)
   {
     console.log("while")
     i++
   }
   i=0
   do{
    console.log("dowhile")
    i++
   }while(i<5);
   var array = ["sathish","arun","madhan"]
   for(key in array)
   {
    console.log("thefor in: ",array[key])
   }
   for(man of array)
   {
     console.log("the forof :",man)
   }
   array.forEach(function(item,index)
   {
      console.log("the index",index,item)
   })
   rl.close()
  }
  tables()
  loop()
  })
})
--------------------------------------------------------------DOM CONCEPT---------------------------------------------------------------------
 Document object model for using an interface of web documents form the tree structure. contain  (html+css+javascript)
EX:
<html>
    <head>
        <title>
            hai
        </title>
    </head>
    <body>
        <h1 id = "h1">
             HELLO WORLD
        </h1>
        <script>
           var doc = document.getElementById("h1")
            doc.textContent = "bye world"
            console.log(doc.textContent)
        </script>
    </body>
</html>
-------------------------------------------------------------event and eventhandlers------------------------------------------------
<html>
    <head>
        <title>
            hai
        </title>
    </head>
    <body>
        <h1 id = "h1">
             HELLO WORLD
        </h1>
        <button onclick ="king()"> click</button>
        <script>
           var doc = document.getElementById("h1")
           console.log("click event")
        function king()
        {
           doc.textContent = "bye world"
        }
        </script>
    </body>
</html>

         
                  
 
